 #: kivy 1.7.2
#: import Animation kivy.animation.Animation
#: import time time
#: import SoundLoader kivy.core.audio.SoundLoader


<Icon>:
    rotation: 90
    border: [0,0,0,0]
    size_hint: 0.125, 0.23
    pos_hint: self.pos_hint
    size: self.size

<StartScreen>:
    #width: 4.0/3*self.height
    # size_hint_y: None
    #size_hint_x: None
    #anchor_x: "center"
    rotation: 90
    canvas:
        Color:
            rgb: 1, 1, 1
        Rectangle:
            source: 'assets/start/start_3_0.png'
            size: self.size

    Icon:
        id: Trump
        background_normal: 'assets/start/btn_play_trump_active.png'
        background_down: 'assets/start/btn_play_trump_active.png'

    Icon:
        id: Hillary
        background_normal: 'assets/start/btn_play_hillary_active.png'
        background_down: 'assets/start/btn_play_hillary_active.png'

    Icon:
        id: Settings
        background_normal: 'assets/start/btn_settings_active.png'
        background_down: 'assets/start/btn_settings_active.png'

    Icon:
        id: Credit
        background_normal: 'assets/start/btn_credits_active.png'
        background_down: 'assets/start/btn_credits_active.png'

<SettingIcon>
    border: [0,0,0,0]
    size_hint: 0.125, 0.23

<SettingsScreen>:
    rotation: 90
    canvas:
        Color:
            rgb: 1, 1, 1
        Rectangle:
            source: 'assets/settings/settings_screen_3_0.png'
            size: self.size

    SettingIcon:
        id: Back
        background_normal: 'assets/settings/btn_back_active.png'
        background_down: 'assets/settings/btn_back_active.png'

    Label:
        pos_hint: {"x": 0.15, "y": 0.55}
        size_hint: 0.65, 0.15
        # size_hint: (0.2, 0.2)
        text: "[ ] Quiet mode\nNo music of sound effects if checked"
        font_size: '25 dp'
        id: check_box_1
        font_hinting: "mono"


    Label:
        pos_hint: {"x": 0.15, "y": 0.35}
        size_hint: 0.65, 0.15
        # size_hint: (0.2, 0.2)
        text: "[ ] Open Play\nOpponent's cards are visible if checked"
        font_size: '25 dp'
        id: check_box_2
        font_hinting: "mono"


<RoundsIcon>
    border: [0,0,0,0]
    size_hint: 0.125, 0.23
    opacity: 0.

<StatesScroll>:
    canvas:
        Color:
            rgba: 1, 1, 1, 0
        Rectangle:
            pos: self.pos
            size: self.size

<RoundsScreen>:
    rotation: 90
    canvas:
        Color:
            rgb: 1, 1, 1
        Rectangle:
            source: 'assets/settings/rounds_screen_3_5.png'
            size: self.size

    RoundsIcon:
        id: Back

    StatesScroll:
        id: StatesScroll

    DistrictsScroll:
        id: DistrictsScroll

    DescriptionScroll:
        id: DescriptionScroll

    RoundsIcon:
        id: Play

    RoundsStats:
        id: rounds_stats

    Label:
        id: won_states
        pos_hint: {'x': 550 / 2048.0, 'y': 1150 / 1536.0}
        size_hint: 0.025, 0.033
        font_size: '30 sp'
        bold: True
        text: str(rounds_stats.won_states)
    Label:
        id: won_districts
        pos_hint: {'x': 1670 / 2048.0, 'y': 1150 / 1536.0}
        size_hint: 0.025, 0.033
        font_size: '30 sp'
        bold: True
        text: str(rounds_stats.won_districts)


<CreditIcon>
    border: [0,0,0,0]
    size_hint: 0.125, 0.23

<CreditScreen>:
    rotation: 90
    canvas:
        Color:
            rgb: 1, 1, 1
        Rectangle:
            source: 'assets/credits/credits_screen_3_0.png'
            size: self.size

    CreditIcon:
        id: Back
        background_normal: 'assets/credits/btn_back_active.png'
        background_down: 'assets/credits/btn_back_active.png'

    Label:
        id: credit_text
        pos_hint: {'x': 100. / 2048.0, 'y': (1536.0 - 1500.) / 1536.0}
        halign: 'left'
        valign: 'top'
        bold: True


<EndGameIcon>:
    border: [0,0,0,0]
    size_hint: 1., 1.
    background_normal: self.background_normal
    background_down: self.background_down


<EndScreen>
    rotation: 90
    canvas:
        Color:
            rgb: 1, 1, 1
        Rectangle:
            source: 'assets/green.png'
            size: self.size

    EndGameIcon:
        id: NewGame
    EndGameIcon:
        id: Winner
    EndGameIcon:
        id: NextGame
    EndGameIcon:
        id: RestartGame

<Card>:
    border: [0,0,0,0]
    size_hint: 0.125, 0.23
    canvas.before:
        PushMatrix
        Rotate:
            angle: root.angle
            axis: 0, 0, 1
            origin: root.center
    canvas.after:
        PopMatrix

<Player>:
    border: [0,0,0,0]
    size_hint: 0.125, 0.23

<MenuButton>:
    canvas:
        Ellipse:
            pos: self.pos
            size: self.size
            source: 'assets/buttons/btn_menu_active.png'

